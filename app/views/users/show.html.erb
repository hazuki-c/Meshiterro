<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'books/list', book: @book %>
     </div> 
  
    <div class="col-md-8 offset-md-1">   
      <h1>Books</h1>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
 
        <%= form_with model: @user, url:'/users' do |f| %>
        <tbody>
          <% @user.books.each do |book| %>
          <tr>
            <td>
              <% if book.user.profile_image.attached? %>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag @user.profile_image, size: "100x100" %>
                <% end %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            </td>
            <td>
              <a href="<%= book_path(book) %>"><%= book.title %></a>
            </td>
            <td>
              <%= book.body %>
            </td>
            
          <% end %>
        </tbody>
        <% end %>
      </table>
    </div>   
  </div>
</div>